<h2>Contact Us!</h2>



	<p class="contact">Tell us what you think!</p>

	<%= form_for @contact, url: contacts_path do |f| %>
	<% @contact.errors.full_messages.each do  |msg| %>
	<ul>	
	<li><%= msg %></li>
	</ul>
	<% end %>
	<p>
		<%= f.label :name %> <br>
		<%= f.text_field :name, autofocus: true %>
	</p>
	<p>
		<%= f.label :email %><br>
		<%= f.text_field :email %>
	</p>
	<p>
		<%= f.label :message %><br>
		<%= f.text_area :message %>
	</p>
	<p>
		<%= f.submit "Send Message" %>
	</p>
<% end %>


