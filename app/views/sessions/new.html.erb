<h2>Sign In To Add Plates!</h2>

<%= form_for(:session, url: sessions_path) do |f| %>
	<div class="field">
	<p>
		<%= f.label :name %> <br>
		<%= f.text_field :name, autofocus: true %>
	</p>
	<p>
		<%= f.label :password %> <br>
		<%= f.password_field :password %>
	</p>
	</div>
	<div class="actions">
		<%= f.submit "Sign in" %>
	</div>
<% end %>